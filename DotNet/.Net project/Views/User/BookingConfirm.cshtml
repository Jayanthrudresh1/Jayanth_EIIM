@{
    ViewBag.Title = "Welcome";
}

@model List<_Net_project.Models.ServiceBookingModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"  />
    <link rel="stylesheet" href="~/_Net_project.styles.css" />
    <title>Welcome</title>
    <style>
    table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>
</head>
<body>
    <div class="navbar-collapse collapse d-sm-flex justify-content-end align-items-center">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
        </li>
    </ul>
</div>




    <h1>Booking Done for , @Context.Session.GetString("UserName")!</h1>


    
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Patient Name</th>
            <th>Patient Age</th>
            <th>Doctor Name</th>
            <th>Service Type</th>
            <th>Preferred Date</th>
            <th>Preferred Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Id</td>
                <td>@booking.PatientName</td>
                <td>@booking.PatientAge</td>
                <td>@booking.DoctorName</td>
                <td>@booking.ServiceType</td>
                <td>@booking.PreferredDate.ToShortDateString()</td>
                <td>@booking.PreferredTime.ToShortTimeString()</td>
            </tr>
        }
    </tbody>
</table>

</body>
 <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</html>